{
	"node": true,
	"esversion": 6,
	"indent": 1,
	"strict": true,
	"curly": true,
	"eqeqeq": true,
	"eqnull": true,
	"undef": true,
	"unused": true,
	"shadow": "outer",

	"bitwise": true,
	"forin": true,
	"freeze": true,
	"futurehostile": true,
	"latedef": "nofunc",
	"nonbsp": true,
